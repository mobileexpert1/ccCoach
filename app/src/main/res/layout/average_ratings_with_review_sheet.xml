<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="handleClick"
            type="com.cccoach.utils.HandleClickListener" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom">

            <LinearLayout
                android:id="@+id/imgeLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_sheet_shape"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15ssp"
                    android:src="@drawable/car_img"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/John_Smith" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/Average_ratings" />
                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleX=".5"
                        android:rating="3.9"
                        android:scaleY=".5"
                        android:theme="@style/RatingBar"
                        android:max="5"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:text="@string/email"
                        android:layout_marginLeft="@dimen/_10ssp"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.2"
                        android:layout_gravity="end"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:text="@string/email_address"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:text="@string/age"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginLeft="@dimen/_10ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.2"
                        android:layout_gravity="end"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:text="@string/age_digit"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.9"
                        android:text="@string/appointment"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginLeft="@dimen/_10ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="end"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:text="@string/appointment_date"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:text="@string/Time_text"
                        android:layout_marginLeft="@dimen/_10ssp"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_gravity="end"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:text="@string/Time_text_hours"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.9"
                        android:layout_marginLeft="@dimen/_10ssp"
                        android:text="@string/appointment_status"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="end"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:text="@string/completed"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_marginLeft="@dimen/_9ssp"
                        android:text="@string/rating_avarded"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_height="@dimen/_30sdp"/>


                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.2"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatRatingBar
                            android:id="@+id/ratingbar"
                            android:theme="@style/RatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            style="@style/Widget.AppCompat.RatingBar.Indicator"
                            android:isIndicator="false"
                            android:numStars="5"
                            android:scaleX=".7"
                            android:scaleY=".7"
                            android:rating="3.9"
                            android:stepSize="0.1" />
                    </FrameLayout>

                    <!--  <RatingBar
                          android:layout_width="0dp"
                          android:layout_weight="1.2"
                          android:layout_height="wrap_content"
                          android:scaleX=".5"
                          android:rating="3.9"
                          android:transformPivotX="@dimen/_30sdp"
                          android:scaleY=".5"
                          android:theme="@style/RatingBar"
                          android:max="5"/>
      -->

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/_14sdp"
                    android:text="@string/your_review" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/review_message"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10ssp"
                    android:fontFamily="@font/poppins_medium"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                </View>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</layout>