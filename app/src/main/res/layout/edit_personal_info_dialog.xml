<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handleClick"
            type="com.cccoach.utils.HandleClickListener" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_sheet_shape"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/edit_personal_info"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:background="@drawable/white_rect_border"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="@string/name"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="@dimen/_13sdp"
                    android:paddingVertical="@dimen/_11sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/_13ssp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:background="@drawable/white_rect_border"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="@string/email_id"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="@dimen/_13sdp"
                    android:paddingVertical="@dimen/_11sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/_13ssp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:background="@drawable/white_rect_border"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="@string/address"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="@dimen/_13sdp"
                    android:paddingVertical="@dimen/_11sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/_13ssp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:background="@drawable/white_rect_border"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="@string/license_number"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="@dimen/_13sdp"
                    android:paddingVertical="@dimen/_11sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/_13ssp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:background="@drawable/white_rect_border"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="@string/DOB"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="@dimen/_13sdp"
                    android:paddingVertical="@dimen/_11sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/_13ssp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/darkblue_rect"
                android:padding="@dimen/_6ssp">

                <TextView
                    android:id="@+id/updateTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:onClick="@{(view)->handleClick.onViewClick(view)}"
                    android:text="@string/upadte"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp">

                </TextView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp">

            </View>

        </LinearLayout>

    </LinearLayout>
</layout>